<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="localConnectionMaker" class="com.LocalConnectionMaker"/>
    <bean id="localUserDao" class="com.UserDao">
        <property name="connectionMaker" ref="localConnectionMaker"/>
    </bean>

    <bean id="prdConnectionMaker" class="com.PrdConnectionMaker"/>
    <bean id="prdUserDao" class="com.UserDao">
        <property name="connectionMaker" ref="prdConnectionMaker"/>
    </bean>

</beans>